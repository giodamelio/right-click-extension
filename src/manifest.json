{
  "manifest_version": 2,
  "name": "Right Click",
  "description": "An extension to allow custom searches based on selected text",
  "version": "0.1.0",
  "permissions": ["menus", "storage", "<all_urls>"],
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "options_ui": {
    "page": "options/options.html"
  }
}
